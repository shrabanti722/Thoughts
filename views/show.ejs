<%- include("partials/header") %>
<div class="ui main text container segment">
      <div class="ui huge header"><%=thought.title%></div>
      <div class = "ui top attached segment">
            <div class = "item">
                <img class="ui centered rounded image" src="<%=thought.image%>">
                <div class="content">
                    <span><%= thought.create.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%=thought.body%></p>
                </div>
                <a class="ui orange inverted button" href="/thoughts/<%=thought._id%>/edit">edit</a>
                <form id = "delete" action="/thoughts/<%=thought._id%>?_method=DELETE" method="POST">
                    <button class="ui red inverted button">Delete</button>
                </form>
            </div>
      </div>
</div>
<%- include("partials/footer") %>
