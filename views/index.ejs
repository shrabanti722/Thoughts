<%- include("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header">Thought App</div>
    <div class = "ui top attached segment">
        <div class = "ui divided items">
            <% thoughts.forEach(function(thought){%>
                <div class = "item">
                      <div class = "image">
                        <img src="<%= thought.image%>"> 
                      </div>
                      <div class = "content">
                          <a class = "header" href="/thoughts/<%=thought._id%>"><%=thought.title%></a>
                          <div class = "meta">
                              <span><%=thought.create.toDateString()%></span>
                          </div>
                          <div class = "description">
                              <p><%-thought.body.substring(0,100)%>....</p>
                          </div>
                          <div class="extra">
                            <a class = "ui floated inverted violet button" href="/thoughts/<%=thought._id%>">
                                  Read More
                                  <i class="right chevron icon"></i>
                            </a>
                          </div>

                      </div>
                </div>
              <%}) %>
        </div>
    </div>
</div>

<div class = "ui main container">
</div>
<%- include("partials/footer") %>
